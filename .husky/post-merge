#!/bin/sh

function changed {
    git diff --name-only HEAD@{1} HEAD | grep "^$1" >/dev/null 2>&1
}

echo 'ğŸ” Checking for changes in bun.lockb...'

if changed 'bun.lockb'; then
    echo "ğŸ“¦ bun.lockb changed. Running bun install to update dependencies..."
    bun install
fi

echo 'âœ¨ You are up to date!'

echo 'ğŸ’¡ If necessary, you can run "bun prebuild:clean" to generate native code.'

exit 0
